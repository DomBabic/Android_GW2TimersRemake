<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="4dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@id/subs_item_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textSize="18sp"
        android:textColor="@color/Tabs_and_Text"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/subs_item_icon"
        android:layout_toRightOf="@id/subs_item_icon"
        android:id="@id/subs_item_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_margin="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/subs_item_title"
        android:layout_toRightOf="@id/subs_item_title"
        android:layout_centerVertical="true"
        android:text="@string/subs_unsub_button"
        android:textAllCaps="false"
        android:textColor="@color/Tabs_and_Text"
        android:background="@drawable/buttonshape"
        android:id="@id/subs_item_button" />

</RelativeLayout>